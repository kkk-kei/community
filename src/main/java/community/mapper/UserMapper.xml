<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="community.mapper.UserMapper" >

    <insert id="insertUser" parameterType="User" >
         insert into USER (account_id,name,token,gmt_create,gmt_modify)
         values(#{accountId},#{name},#{token},#{gmtCreate},#{gmtModify});
    </insert>

    <select id="findByToken" resultType="community.pojo.User">
        select * from USER where token = #{token};
    </select>

</mapper>